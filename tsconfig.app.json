{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "tests",
    "types",
    "components.d.ts",
    "supabase/functions/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["es2022", "dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@type/*": ["./types/*"]
    },
    "typeRoots": ["./node_modules/@types", "types"]
  }
}
